<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/guides"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/layout_camera_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surface_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/rubikPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_camera_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Black"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2.0dip"
                    android:background="#000000">

                    <TableRow
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:layout_marginTop="2.0dip">

                        <View
                            android:id="@+id/Cell11"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="1"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="1 1" />

                        <View
                            android:id="@+id/Cell12"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="2"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="1 2" />

                        <View
                            android:id="@+id/Cell13"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="3"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="1 3" />
                    </TableRow>

                    <TableRow
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip">

                        <View
                            android:id="@+id/Cell21"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="1"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="2 1" />

                        <View
                            android:id="@+id/Cell22"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="2"
                            android:layout_margin="2.0dip"
                            android:background="#ffdf0101" />

                        <View
                            android:id="@+id/Cell23"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="3"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="2 3" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="2.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip">

                        <View
                            android:id="@+id/Cell31"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="1"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="3 1" />

                        <View
                            android:id="@+id/Cell32"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="2"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="3 2" />

                        <View
                            android:id="@+id/Cell33"
                            android:layout_width="32.0dip"
                            android:layout_height="32.0dip"
                            android:layout_column="3"
                            android:layout_margin="2.0dip"
                            android:background="#ffcccccc"
                            android:onClick="setTileColor"
                            android:tag="3 3" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>